{
  "name": "cv",
  "version": "1.0.0",
  "private": true,
  "author": "Alec Rust (https://www.alecrust.com/)",
  "scripts": {
    "dev": "npm run build && resume serve --resume src/resume.json --theme .",
    "build": "node build.js",
    "test": "playwright test",
    "lint": "biome ci . && stylelint '**/*.css'",
    "format": "biome check --write . && stylelint --fix '**/*.css'",
    "watch": "node build.js --watch",
    "validate-schema": "cd src && resume validate",
    "spellcheck": "cspell",
    "prepare": "husky"
  },
  "browserslist": ["defaults"],
  "dependencies": {
    "date-fns": "^4.1.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.52.0",
    "chokidar": "^4.0.3",
    "cspell": "^9.0.2",
    "cssnano": "^7.0.7",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.4",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.2.0",
    "resume-cli": "^3.1.2",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "lint-staged": {
    "*": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "*.css": "stylelint --fix",
    "*.{md,hbs}": "cspell --no-must-find-files --no-summary --no-progress",
    "src/resume.json": "cspell --no-must-find-files --no-summary --no-progress"
  }
}
