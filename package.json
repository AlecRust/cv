{
  "name": "cv",
  "version": "1.0.0",
  "private": true,
  "author": "Alec Rust (https://www.alecrust.com/)",
  "scripts": {
    "dev": "npm run build && resume serve --resume src/resume.json --theme .",
    "build": "node build.js",
    "test": "playwright test",
    "lint": "prettier --check . && eslint . && stylelint '**/*.css'",
    "format": "prettier --write . && eslint --fix . && stylelint --fix '**/*.css'",
    "watch": "node build.js --watch",
    "validate-schema": "cd src && resume validate",
    "spellcheck": "cspell",
    "prepare": "husky"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "date-fns": "^4.1.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@playwright/test": "^1.47.2",
    "chokidar": "^4.0.1",
    "cspell": "^8.14.4",
    "cssnano": "^7.0.6",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "handlebars": "^4.7.8",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.0.5",
    "prettier": "^3.3.3",
    "resume-cli": "^3.1.2",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.js": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.{md,hbs}": "cspell --no-must-find-files --no-summary --no-progress",
    "src/resume.json": "cspell --no-must-find-files --no-summary --no-progress"
  }
}
