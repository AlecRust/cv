{
  "name": "cv",
  "version": "1.0.0",
  "private": true,
  "author": "Alec Rust (https://www.alecrust.com/)",
  "scripts": {
    "dev": "npm run build && resume serve --resume src/resume.json --theme .",
    "build": "node build.js",
    "test": "jest",
    "lint": "prettier --check . && eslint . && stylelint '**/*.css'",
    "format": "prettier --write . && eslint --fix . && stylelint --fix '**/*.css'",
    "watch": "node build.js --watch",
    "validate-schema": "cd src && resume validate",
    "spellcheck": "cspell",
    "prepare": "husky"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "date-fns": "^3.3.1",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "chokidar": "^3.6.0",
    "cspell": "^8.4.1",
    "cssnano": "^6.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "postcss-preset-env": "^9.4.0",
    "prettier": "^3.2.5",
    "puppeteer": "^22.2.0",
    "resume-cli": "^3.0.8",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.js": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.{md,hbs}": "cspell --no-must-find-files --no-summary --no-progress",
    "src/resume.json": "cspell --no-must-find-files --no-summary --no-progress"
  }
}
